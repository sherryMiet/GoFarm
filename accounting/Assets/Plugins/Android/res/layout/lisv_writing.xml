<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_member"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/user"

        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/img_member"
        android:text="標題"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_writeMember"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@id/tv_title"
        android:text="發文者"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_billboard"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_writeMember"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toRightOf="@id/tv_writeMember"
        android:text="看板分類"
        android:textSize="18sp"
      />

    <TextView
        android:id="@+id/tv_article"
        android:layout_width="322dp"
        android:layout_height="28dp"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="60dp"
        android:layout_marginTop="66dp"
        android:layout_toRightOf="@id/img_member"
        android:singleLine="true"
        android:text="內文"
        android:textSize="16dp"

        />

</RelativeLayout>