<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="發票頁"
        android:textSize="36sp"

        />

    <Button
        android:id="@+id/btntocamera"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"

        android:layout_marginStart="90dp"
        android:layout_marginTop="164dp"
        android:background="#20B11D"
        android:text="掃描發票"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btntoenter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="232dp"
        android:layout_marginTop="163dp"
        android:background="#FF7070"
        android:text="手動對獎"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btntoprize"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btntocamera"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"

        android:layout_marginTop="23dp"
        android:background="#FFBE00"
        android:text="中獎號碼"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btntolater"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btntocamera"
        android:layout_alignParentStart="true"
        android:layout_marginStart="155dp"

        android:layout_marginTop="132dp"
        android:background="#9B6C0B"
        android:text="等待對獎"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btntorecord"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btntoenter"
        android:layout_marginStart="52dp"

        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/btntoprize"
        android:background="#04B9E6"
        android:text="對獎記錄"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_comeback"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@android:drawable/ic_menu_revert"

        />

</RelativeLayout>