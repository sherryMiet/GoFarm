<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingEdit">

    <TextView
        android:id="@+id/tv_writing_title"
        android:layout_width="43dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="標題"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_writing_billboard"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="文章刊版"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_writing_aritle"
        android:layout_width="289dp"
        android:layout_height="212dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="8dp"
        android:text="內容"
        android:textSize="18sp"

        />

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="267dp"
        android:layout_height="46dp"
        android:layout_below="@+id/lsv_msg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:hint="msg"
        android:inputType="textPersonName"

        />

    <Button
        android:id="@+id/btn_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_writing_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="323dp"
        android:onClick="writing_msg"
        android:text="留言"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lsv_msg"
        android:layout_width="363dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="86dp"

       />

    <TextView
        android:id="@+id/tv_writing_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="文章編碼"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_writing_aritle0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:text="內容"
        android:textSize="18sp"

        />
</RelativeLayout>